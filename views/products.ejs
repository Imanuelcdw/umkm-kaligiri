<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Produk</title>
    <%- include('partials/css.ejs') %>
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <div class="container">
      <h2 class="text-center">Produk Kami</h2>
      <div class="row">
        <% data.forEach(e => { %>
        <div class="col-md-6 mb-4">
          <div style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.3)), url('<%= e.image %>'); height: 400px; background-size: cover; background-position: center" class="rounded shadow">
            <div class="text-white"><%= e.name %></div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
