<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UMKM KALIGIRI - <%= active %></title>
    <%- include('../partials/css.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../partials/header-dashboard.ejs') %>
    <!--  -->
    <div class="container mt-3">
      <div class="row">
        <div class="col-md-6">
          <div class="card shadow">
            <div class="card-body">
              <h3>Edit Acara</h3>
              <form action="<%=  `${data._id}?_method=patch` %>" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="name" class="form-label">Nama Acara</label>
                  <input type="text" class="form-control" id="name" placeholder="Nama Acara" name="name" value="<%= data.name %>" required />
                </div>

                <div class="mb-3">
                  <label for="venue" class="form-label">Tempat Acara</label>
                  <input type="text" class="form-control" id="venue" placeholder="Nama Acara" name="venue" value="<%= data.venue %>" required />
                </div>

                <div class="mb-3">
                  <label for="desc" class="form-label">Deskripsi</label>
                  <textarea name="description" id="desc" class="form-control" required><%= data.description %></textarea>
                </div>

                <div class="mb-3">
                  <label for="start" class="form-label">Tanggal Mulai Acara</label>
                  <input type="date" class="form-control" id="start" name="start" value="<%= data.start %>" required />
                </div>

                <div class="mb-3">
                  <label for="end" class="form-label">Tanggal Selesai Acara</label>
                  <input type="date" class="form-control" id="end" name="end" value="<%= data.end %>" required />
                </div>

                <div class="mb-3">
                  <button type="submit" class="btn btn-primary">Ubah</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--  -->

    <div class="my-5"></div>
  </body>
</html>
<%- include('../partials/js.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script>
  $(document).ready(function () {
    $('#desc').summernote({
      placeholder: 'Deskripsi',
      tabsize: 2,
      height: 120,
      toolbar: [
        ['style', ['style']],
        ['font', ['bold', 'underline', 'clear']],
        ['para', ['ul', 'ol', 'paragraph']],
        ['table', ['table']],
      ],
    })
  })
</script>
